{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist/js",
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "client/src/**/*.aot.ts"
  ]
}
