{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "newLine": "LF",
    //    "noImplicitAny": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "allowJs": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
