{
  "appenders": {
    "console": {
      "type": "console"
    },
    "app": {
      "type": "dateFile",
      "filename": "./logs/cash-stash.log",
      "pattern": "-yyyy-MM-dd",
      "alwaysIncludePattern": true,
      "maxLogSize": 20480,
      "numBackups": 3
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "console"
      ],
      "level": "DEBUG"
    },
    "cash-stash": {
      "appenders": [
        "app"
      ],
      "level": "DEBUG"
    }
  }
}
